{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2017",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types", "node_module/phaser/types"],
    "types": ["phaser", "node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}

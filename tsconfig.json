{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types", "node_module/phaser/types"],
    "types": ["phaser", "node"]
  },
  "include": ["./src/**/*", "public/service-worker.js"],
  "exclude": ["./node_modules/**/*"]
}
